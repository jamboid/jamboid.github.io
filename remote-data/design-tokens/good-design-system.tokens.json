{
  "GDS": {
    "$description": "Good Design System Namespace",
    "Core": {
      "$description": "Core Design Tokens",
      "Colour": {
        "$type":"color",
        "Red": {
          "$value": "#ee495b",
          "$description": "The primary Good accent colour."
        },
        "Dark Red": {
          "$value": "#d61429",
          "$description": "The primary Good accent colour shade."
        },
        "Pink": {
          "$value": "#ee495b"
        },
        "Black": {
          "$value": "#3c3c44"
        },
        "Dark Grey": {
          "$value": "#45454b"
        },
        "Light Grey": {
          "$value": "#808080"
        },
        "Off White": {
          "$value": "#f0f0f0"
        },
        "White": {
          "$value": "#ffffff"
        } 
      },
      "Typography": {
        "Primary Font": {
          "$value": "Akzidenz-Grotesk Pro",
          "$type": "fontFamily"
        },
        "Secondary Font": {
          "$value":"Sabon",
          "$type": "fontFamily"
        },
        "Digital Font": {
          "$value": ["Helvetica","Arial"],
          "$type": "fontFamily"
        },
        "Font Weight Default": {
          "$value": 300,
          "$type": "fontWeight"
        },
        "Font Weight Light": {
          "$value": 200,
          "$type": "fontWeight"
        },
        "Font Weight Bold": {
          "$value": 600,
          "$type": "fontWeight"
        }
      },
      "Space": {
        "100": {
          "$value":"8px",
          "$type":"dimension",
          "$description":"Base spacing unit"
        },
        "200": {
          "$value":"16px",
          "$type":"dimension",
          "$description":"Small spacing unit"
        },
        "300": {
          "$value":"24px",
          "$type":"dimension",
          "$description":"Medium spacing unit"
        },
        "500": {
          "$value":"40px",
          "$type":"dimension",
          "$description":"Large spacing unit"
        }
      },
      "Duration": {
        "Short": {
          "$value": "150ms",
          "$type": "duration"
        },
        "Medium": {
          "$value": "250ms",
          "$type": "duration"
        },
        "Long": {
          "$value": "400ms",
          "$type": "duration"
        }
      },
      "Timing Curves": {
        "Ease": {
          "$value": [0.25, 0.1, 0.25, 1],
          "$type": "cubicBezier"
        },
        "Ease In": {
          "$value": [0.42, 0, 1, 1],
          "$type": "cubicBezier"
        },
        "Ease Out": {
          "$value": [0, 0, 0.58, 1],
          "$type": "cubicBezier"
        },
        "Ease In Out": {
          "$value": [0.42, 0, 0.58, 1],
          "$type": "cubicBezier"
        }
      }
    },
    "Semantic": {
      "$description": "Semantic Design Tokens",
      "Colour": {
        "Theme": {
          "$type":"color",
          "Light":{
            "Accent": {
              "$value": "{GDS/Core/Colour/Red}"
            },
            "Accent Tint": {
              "$value": "{GDS/Core/Colour/Dark Red}"
            },
            "Foreground": {
              "$value": "{GDS/Core/Colour/Dark Grey}"
            },
            "Background": {
              "$value": "{GDS/Core/Colour/White}"
            }
          },
          "Dark": {
            "Accent": {
              "$value": "{GDS/Core/Colour/Red}"
            },
            "Accent Tint": {
              "$value": "{GDS/Core/Colour/Pink}"
            },
            "Foreground": {
              "$value": "{GDS/Core/Colour/White}"
            },
            "Background": {
              "$value": "{GDS/Core/Colour/Dark Grey}"
            }
          }
        }
      },
      "Typography": {
        "$type": "typography",
        "Heading Level 1": {
          "$value": {
            "fontFamily": "{GDS/Core/Typography/Primary Font}",
            "fontSize": "42px",
            "fontWeight": "GDS/Core/Typography/Font Weight Bold",
            "letterSpacing": "0px",
            "lineHeight": "1.2"
          }
        },
        "Heading Level 2": {
          "$value": {
            "fontFamily": "{GDS/Core/Typography/Primary Font}",
            "fontSize": "28px",
            "fontWeight": "GDS/Core/Typography/Font Weight Bold",
            "letterSpacing": "0px",
            "lineHeight": "1.2"
          }
        },
        "Body Text": {
          "$value": {
            "fontFamily": "{GDS/Core/Typography/Primary Font}",
            "fontSize": "18px",
            "fontWeight": "GDS/Core/Typography/Font Weight Default",
            "letterSpacing": "0px",
            "lineHeight": "1.5"
          }
        }
      },
      "Transition": {
        "Quick": {
          "$type": "transition",
          "$value": {
            "duration": "{GDS/Core/Duration/Short}",
            "delay": "0ms",
            "timingFunction": "{GDS/Core/Timing/Ease In}"
          }
        },
        "Gentle": {
          "$type": "transition",
          "$value": {
            "duration": "{GDS/Core/Duration/Medium}",
            "delay": "0ms",
            "timingFunction": "{GDS/Core/Timing/Ease In Out}"
          }
        }
      }
    }
  }
}
