{
  "GDS": {
    "$description": "Good design system namespace",
    "$extensions": {
      "groupType":"namespace"
    },
    "Ref": {
      "$description": "All tokens available to be referenced in the design system and System-level tokens",
      "$extensions": {
        "groupType":"level"
      },
      "Colours": {
        "$description": "The Colour-related tokens for the Reference set",
        "$type":"color",
        "$extensions": {
          "groupType":"section"
        },
        "Red": {
          "$value": "#ee495b",
          "$description": "The primary Good accent colour."
        },
        "Dark Red": {
          "$value": "#d61429",
          "$description": "The primary Good accent colour shade."
        },
        "Pink": {
          "$value": "#fff0f4"
        },
        "Greyscale": {
          "$description": "Neutral/Grey colours",
          "$extensions": {
            "groupType":"sub-section"
          },
          "Black": {
            "$value": "#3c3c44"
          },
          "Dark Grey": {
            "$value": "#45454b"
          },
          "Light Grey": {
            "$value": "#808080"
          },
          "Off White": {
            "$value": "#f0f0f0"
          },
          "White": {
            "$value": "#ffffff"
          } 
        }
      },
      "Typography": {
        "$description": "Basic typography values for font family, weight and size.",
        "$extensions": {
          "groupType":"section"
        },
        "Fonts": {
          "$extensions": {
            "groupType":"sub-section"
          },
          "Primary": {
            "$value": "Akzidenz-Grotesk Pro",
            "$type": "fontFamily"
          },
          "Secondary": {
            "$value":"Sabon",
            "$type": "fontFamily"
          },
          "Digital": {
            "$value": ["Helvetica","Arial"],
            "$type": "fontFamily"
          }
        },
        "Weights": {
          "$extensions": {
            "groupType":"sub-section"
          },
          "Normal": {
            "$value": 300,
            "$type": "fontWeight"
          },
          "Light": {
            "$value": 200,
            "$type": "fontWeight"
          },
          "Bold": {
            "$value": 600,
            "$type": "fontWeight"
          }
        }
      },
      "Size Units": {
        "$description": "Size scale units",
        "$extensions": {
          "groupType":"section"
        },
        "100": {
          "$value":"8px",
          "$type":"dimension",
          "$description":"Base size unit"
        },
        "200": {
          "$value":"16px",
          "$type":"dimension",
          "$description":"Small size unit"
        },
        "300": {
          "$value":"24px",
          "$type":"dimension",
          "$description":"Medium size unit"
        },
        "500": {
          "$value":"40px",
          "$type":"dimension",
          "$description":"Large size unit"
        }
      },
      "Durations": {
        "$description": "Time durations for use in transitions, animations and other time-based functionality.",
        "$extensions": {
          "groupType":"section"
        },
        "Short": {
          "$value": "150ms",
          "$type": "duration"
        },
        "Medium": {
          "$value": "250ms",
          "$type": "duration"
        },
        "Long": {
          "$value": "600ms",
          "$type": "duration"
        }
      },
      "Timing Curves": {
        "$description": "Bezier curves for use in transitions, animations and other time-based functionality.",
        "$extensions": {
          "groupType":"section"
        },
        "Ease": {
          "$value": [0.25, 0.1, 0.25, 1],
          "$type": "cubicBezier"
        },
        "Ease In": {
          "$value": [0.42, 0, 1, 1],
          "$type": "cubicBezier"
        },
        "Ease Out": {
          "$value": [0, 0, 0.58, 1],
          "$type": "cubicBezier"
        },
        "Ease In Out": {
          "$value": [0.42, 0, 0.58, 1],
          "$type": "cubicBezier"
        }
      }
    },
    "Sys": {
      "$description": "System tokens representing the design decisions that create the character of the design system",
      "$extensions": {
        "groupType":"level"
      },
      "Colours": {
        "$description": "The colour system.",
        "$extensions": {
          "groupType":"section"
        },
        "$type":"color",
        "Light Theme": {
          "$extensions": {
            "groupType":"sub-section"
          },
          "Accent": {
            "$value": "{GDS/Ref/Colours/Red}"
          },
          "Accent Tint": {
            "$value": "{GDS/Ref/Colours/Dark Red}"
          },
          "Foreground": {
            "$value": "{GDS/Ref/Colours/Greyscale/Dark Grey}"
          },
          "Background": {
            "$value": "{GDS/Ref/Colours/Greyscale/White}"
          }
          
        },
        "Dark Theme": {
          "$extensions": {
            "groupType":"sub-section"
          },
          "Accent": {
            "$value": "{GDS/Ref/Colours/Red}"
          },
          "Accent Tint": {
            "$value": "{GDS/Ref/Colours/Pink}"
          },
          "Foreground": {
            "$value": "{GDS/Ref/Colours/Greyscale/White}"
          },
          "Background": {
            "$value": "{GDS/Ref/Colours/Greyscale/Dark Grey}"
          }
        }
      },
      "Typography": {
        "$type": "typography",
        "$extensions": {
          "groupType":"section"
        },
        "Heading Level 1": {
          "$value": {
            "fontFamily": "{GDS/Ref/Typography/Fonts/Primary}",
            "fontSize": "42px",
            "fontWeight": "{GDS/Ref/Typography/Weights/Bold}",
            "letterSpacing": "0px",
            "lineHeight": "1.2"
          }
        },
        "Heading Level 2": {
          "$value": {
            "fontFamily": "{GDS/Ref/Typography/Fonts/Primary}",
            "fontSize": "28px",
            "fontWeight": "{GDS/Ref/Typography/Weights/Bold}",
            "letterSpacing": "0px",
            "lineHeight": "1.2"
          }
        },
        "Body Text": {
          "$value": {
            "fontFamily": "{GDS/Ref/Typography/Fonts/Primary}",
            "fontSize": "18px",
            "fontWeight": "{GDS/Ref/Typography/Weights/Normal}",
            "letterSpacing": "0px",
            "lineHeight": "1.5"
          }
        }
      },
      "Transitions": {
        "$extensions": {
          "groupType":"section"
        },
        "$type": "transition",
        "Quick": {
          "$value": {
            "duration": "{GDS/Ref/Durations/Short}",
            "delay": "0ms",
            "timingFunction": "{GDS/Ref/Timing Curves/Ease In}"
          }
        },
        "Gentle": {
          "$value": {
            "duration": "{GDS/Ref/Durations/Medium}",
            "delay": "0ms",
            "timingFunction": "{GDS/Ref/Timing Curves/Ease In Out}"
          }
        },
        "Long": {
          "$value": {
            "duration": "{GDS/Ref/Durations/Long}",
            "delay": "0ms",
            "timingFunction": "{GDS/Ref/Timing Curves/Ease In Out}"
          }
        }

      }
    }
  }
}
